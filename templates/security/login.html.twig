{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
    <div class="container mt-4">
        <h1>Connexion !</h1>
        {% if error %}
            <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata,'security') }}
            </div>
        {% endif %}
            <form action="{{ path('security_login') }}" method="post">
                <div class="form-group">                
                        <label for="username" >Nom d'utlisateur</label>
                    <input id="username" require name="_username" type="text" class="form-control" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label for="password" class="submit">Mot de passe</label>
                    <input id="password" require name="_password" type="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary"> Connexion !</button>
            </form>
    </div>
{% endblock %}  